<h1>Editing tests</h1>

<%= error_messages_for :tests %>

<% form_for(:tests, :url => tests_path(@tests), :html => { :method => :put }) do |f| %>
  <p>
    <b>Problem</b><br />
    <%= f.text_field :problem_id %>
  </p>

  <p>
    <b>Position</b><br />
    <%= f.text_field :position %>
  </p>

  <p>
    <b>Input file</b><br />
    <%= f.text_field :input_file %>
  </p>

  <p>
    <b>Answer file</b><br />
    <%= f.text_field :answer_file %>
  </p>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', tests_path(@tests) %> |
<%= link_to 'Back', tests_path %>